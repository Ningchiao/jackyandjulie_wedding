<body class="p-4">
    <div id="game-container" class="container">
        <!-- 開始畫面 -->
        <div id="start-screen" class="flex flex-col items-center justify-center space-y-6">
            <h1 class="text-4xl font-bold mb-4 drop-shadow-lg">搶花椰菜大賽</h1>
            <p class="text-xl font-medium">請選擇你的隊伍</p>
            <div id="team-selection" class="flex flex-wrap justify-center gap-4 mt-4">
                <button class="team-button bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-6 rounded-full shadow-lg" data-team="TeamA">新郎隊</button>
                <button class="team-button bg-red-500 hover:bg-red-600 text-white font-bold py-3 px-6 rounded-full shadow-lg" data-team="TeamB">新娘隊</button>
                <button class="team-button bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-6 rounded-full shadow-lg" data-team="TeamC">同學同事隊</button>
                <button class="team-button bg-purple-500 hover:bg-purple-600 text-white font-bold py-3 px-6 rounded-full shadow-lg" data-team="TeamD">親友隊</button>
            </div>
        </div>

        <!-- 遊戲畫面 -->
        <div id="game-screen" class="hidden flex flex-col items-center">
            <h2 id="team-name" class="text-3xl font-bold mb-4"></h2>
            <div id="timer" class="timer-display">60</div>
            
            <div id="broccoli-container" class="broccoli-container">
                <div id="broccoli-icon" class="broccoli-icon">🥦</div>
            </div>

            <div id="score-board" class="w-full mt-6 space-y-2">
                <div class="score-item" data-team="TeamA">
                    <span class="team-label">新郎隊</span>
                    <span class="team-score font-extrabold text-2xl" id="score-TeamA">0</span>
                </div>
                <div class="score-item" data-team="TeamB">
                    <span class="team-label">新娘隊</span>
                    <span class="team-score font-extrabold text-2xl" id="score-TeamB">0</span>
                </div>
                <div class="score-item" data-team="TeamC">
                    <span class="team-label">同學同事隊</span>
                    <span class="team-score font-extrabold text-2xl" id="score-TeamC">0</span>
                </div>
                <div class="score-item" data-team="TeamD">
                    <span class="team-label">親友隊</span>
                    <span class="team-score font-extrabold text-2xl" id="score-TeamD">0</span>
                </div>
            </div>
        </div>
        
        <!-- 結束畫面 -->
        <div id="end-screen" class="hidden flex-col items-center space-y-6">
            <h2 class="text-4xl font-bold drop-shadow-lg">遊戲結束！</h2>
            <p id="winner-message" class="text-2xl font-semibold text-center leading-relaxed">恭喜 <span id="winning-team" class="text-green-400"></span> 隊獲勝，贏得花椰菜！</p>
            <button id="restart-button" class="bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-3 px-6 rounded-full shadow-lg transition-transform duration-200">
                再次挑戰
            </button>
        </div>

    </div>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, doc, onSnapshot, setDoc } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // Global variables provided by the canvas environment
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
        const firebaseConfig = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : {};

        // Firebase initialization
        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        const auth = getAuth(app);
        
        let userId = null;
        let selectedTeam = null;
        let gameActive = false;
        let gameDuration = 60; // Game duration in seconds
        let timerId;

        // UI elements
        const startScreen = document.getElementById('start-screen');
        const teamSelection = document.getElementById('team-selection');
        const gameScreen = document.getElementById('game-screen');
        const endScreen = document.getElementById('end-screen');
        const teamNameDisplay = document.getElementById('team-name');
        const timerDisplay = document.getElementById('timer');
        const broccoliContainer = document.getElementById('broccoli-container');
        const restartButton = document.getElementById('restart-button');
        const winnerMessage = document.getElementById('winner-message');

        const teams = {
            TeamA: '新郎隊',
            TeamB: '新娘隊',
            TeamC: '同學同事隊',
            TeamD: '親友隊'
        };

        // Initialize Firebase Authentication
        const signIn = async () => {
            try {
                await signInAnonymously(auth);
            } catch (error) {
                console.error("Firebase Auth failed:", error);
            }
        };

        auth.onAuthStateChanged(async (user) => {
            if (user) {
                userId = user.uid;
                console.log("Signed in anonymously with user ID:", userId);
                setupFirestoreListener();
            } else {
                console.log("Not signed in, attempting anonymous sign in...");
                await signIn();
            }
        });

        // Setup real-time listener for game scores
        const setupFirestoreListener = () => {
            // Fix: Use a valid Firestore document path with an even number of segments
            const docRef = doc(db, `artifacts/${appId}/public/data/game_data/game-scores`);
            onSnapshot(docRef, (docSnap) => {
                if (docSnap.exists()) {
                    const scores = docSnap.data();
                    updateScores(scores);
                    if (scores.gameActive === false && gameActive) {
                        endGame(scores);
                    }
                } else {
                    // Initialize game state on first load
                    setDoc(docRef, {
                        TeamA: 0,
                        TeamB: 0,
                        TeamC: 0,
                        TeamD: 0,
                        gameActive: false,
                        lastReset: Date.now()
                    });
                }
            }, (error) => {
                console.error("Error listening to Firestore document:", error);
            });
        };

        // Update scores on the UI
        const updateScores = (scores) => {
            for (const teamId in teams) {
                if (scores.hasOwnProperty(teamId)) {
                    document.getElementById(`score-${teamId}`).innerText = scores[teamId];
                }
            }
        };

        // Start the game timer
        const startTimer = () => {
            let timeLeft = gameDuration;
            timerDisplay.innerText = timeLeft;
            gameActive = true;

            timerId = setInterval(() => {
                timeLeft--;
                timerDisplay.innerText = timeLeft;
                if (timeLeft <= 0) {
                    clearInterval(timerId);
                    gameActive = false;
                    // Trigger game end through Firestore update
                    updateGameState(false);
                }
            }, 1000);
        };

        // Update game state in Firestore
        const updateGameState = async (active) => {
            // Fix: Use a valid Firestore document path with an even number of segments
            const docRef = doc(db, `artifacts/${appId}/public/data/game_data/game-scores`);
            try {
                await setDoc(docRef, { gameActive: active }, { merge: true });
            } catch (error) {
                console.error("Error updating game state:", error);
            }
        };

        // Handle team selection
        teamSelection.addEventListener('click', (event) => {
            if (event.target.tagName === 'BUTTON') {
                selectedTeam = event.target.dataset.team;
                teamNameDisplay.innerText = `${teams[selectedTeam]}：你的隊伍`;
                startScreen.classList.add('hidden');
                gameScreen.classList.remove('hidden');
                
                // Start the game timer when a player joins
                if (!gameActive) {
                    startTimer();
                    updateGameState(true);
                }
            }
        });

        // Handle click on the broccoli icon
        broccoliContainer.addEventListener('click', async (event) => {
            if (!gameActive || !selectedTeam) return;

            // Animate the broccoli icon
            const broccoliIcon = document.getElementById('broccoli-icon');
            broccoliIcon.style.animation = 'none';
            void broccoliIcon.offsetWidth; // Trigger reflow
            broccoliIcon.style.animation = 'bounce 0.5s ease-in-out';

            // Create a floating score bubble
            const bubble = document.createElement('div');
            bubble.classList.add('score-bubble');
            bubble.innerText = '+1';
            bubble.style.left = `${event.clientX - broccoliContainer.getBoundingClientRect().left}px`;
            bubble.style.top = `${event.clientY - broccoliContainer.getBoundingClientRect().top}px`;
            broccoliContainer.appendChild(bubble);

            setTimeout(() => {
                bubble.remove();
            }, 1000);

            // Send score update to Firestore
            const docRef = doc(db, `artifacts/${appId}/public/data/game_data/game-scores`);
            const teamField = selectedTeam;
            
            try {
                const docSnap = await setDoc(docRef, { [teamField]: getScore(teamField) + 1 }, { merge: true });
            } catch (error) {
                console.error("Error updating score:", error);
            }
        });

        // Get score from UI to prevent multiple rapid reads from firestore
        const getScore = (teamId) => {
            return parseInt(document.getElementById(`score-${teamId}`).innerText, 10) || 0;
        };
        
        // End the game and show results
        const endGame = (scores) => {
            gameActive = false;
            gameScreen.classList.add('hidden');
            endScreen.classList.remove('hidden');

            const sortedTeams = Object.keys(scores).filter(key => key.startsWith('Team')).sort((a, b) => scores[b] - scores[a]);
            const winningTeamId = sortedTeams[0];
            const winningTeamName = teams[winningTeamId] || '某個';

            winnerMessage.innerHTML = `恭喜 <span class="text-green-400 font-extrabold">${winningTeamName}</span> 隊獲勝，贏得花椰菜！`;
        };

        // Restart button
        restartButton.addEventListener('click', async () => {
            // Reset scores in Firestore
            const docRef = doc(db, `artifacts/${appId}/public/data/game_data/game-scores`);
            try {
                await setDoc(docRef, {
                    TeamA: 0,
                    TeamB: 0,
                    TeamC: 0,
                    TeamD: 0,
                    gameActive: true,
                    lastReset: Date.now()
                });
            } catch (error) {
                console.error("Error resetting game:", error);
            }
            // Reset UI
            endScreen.classList.add('hidden');
            startScreen.classList.remove('hidden');
            timerDisplay.innerText = gameDuration;
            selectedTeam = null;
            clearInterval(timerId);
            gameActive = false;
        });

    </script>
</body>
</html>
